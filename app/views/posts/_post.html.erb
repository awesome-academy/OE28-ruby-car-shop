<div class="col-lg-6 col-md-4 col-sm-6">
  <div class="courses-thumb courses-thumb-secondary">
    <div class="courses-top">
      <div class="courses-image">
        <%= image_tag post.car_image.url, class: "img-responsive"  %>
      </div>
      <div class="courses-date">
        <span title="Author"><i class="fa fa-dashboard"></i> <%= post.user_name %></span>
        <span title="Author"><i class="fa fa-cube"></i> <%= post.car_car_type_name %></span>
        <span title="Views"><i class="fa fa-cog"></i> <%= post.car_gearbox_name %></span>
      </div>
    </div>
    <div class="courses-detail">
      <h3><%= link_to post.name, post_path(post.id) %></h3>
      <p class="lead"><strong><%= number_to_price post.car_price %></strong></p>
      <p><%= post.car_year_of_manufacture_name %> &nbsp;&nbsp;/&nbsp;&nbsp;
        <%= post.car_fuel_name %> &nbsp;&nbsp;/&nbsp;&nbsp;
        <%= post.car_brand_name %> &nbsp;&nbsp;/&nbsp;&nbsp;
        <%= post.car_condition_name %></p>
    </div>
    <div class="courses-info">
      <%= link_to t("posts.show.view_more"), post_path(post.id), class: "section-btn btn btn-primary btn-block" %>
    </div>
  </div>
</div>
