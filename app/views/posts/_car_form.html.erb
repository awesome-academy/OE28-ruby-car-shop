<%= f.fields_for :car do |c| %>
  <%= c.label :image, t("posts.new.image") %>
  <%= c.file_field :image, class: "form-control" %>
  <%= c.label :year_of_manufacture_id, t("posts.new.year_of_manufacture") %>
  <%= c.select(:year_of_manufacture_id, options_for_select(load_dropdown(YearOfManufacture)), {}, class: "form-control" )%>
  <%= c.label :gearbox_id, t("posts.new.gear_box") %>
  <%= c.select(:gearbox_id, options_for_select(load_dropdown(Gearbox)), {}, {class: "form-control"}) %>
  <%= c.label :car_type_id, t("posts.new.car_type") %>
  <%= c.select(:car_type_id, options_for_select(load_dropdown(CarType)), {}, {class: "form-control"}) %>
  <%= c.label :brand_id, t("posts.new.brand") %>
  <%= c.select(:brand_id, options_for_select(load_dropdown(Brand)), {}, {class: "form-control"}) %>
  <%= c.label :car_model_id, t("posts.new.car_model") %>
  <%= c.select(:car_model_id, options_for_select(load_dropdown(CarModel)), {}, {class: "form-control"}) %>
  <%= c.label :color_id, t("posts.new.color") %>
  <%= c.select(:color_id, options_for_select(load_dropdown(Color)), {}, {class: "form-control"}) %>
  <%= c.label :number_of_seat_id, t("posts.new.number_of_seat") %>
  <%= c.select(:number_of_seat_id, options_for_select(load_dropdown(NumberOfSeat)), {}, {class: "form-control"}) %>
  <%= c.label :condition_id, t("posts.new.condition") %>
  <%= c.select(:condition_id, options_for_select(load_dropdown(Condition)), {}, {class: "form-control"}) %>
  <%= c.label :fuel_id, t("posts.new.fuel") %>
  <%= c.select(:fuel_id, options_for_select(load_dropdown(Fuel)), {}, {class: "form-control"}) %>
  <%= c.label :origin_id, t("posts.new.origin") %>
  <%= c.select(:origin_id, options_for_select(load_dropdown(Origin)), {}, {class: "form-control"}) %>
  <%= c.label :price, t("posts.new.price") %>
  <%= c.text_field :price, class: "form-control" %>
  <%= c.label :mileage, t("posts.new.mileage") %>
  <%= c.text_field :mileage, class: "form-control" %>
<% end %>
